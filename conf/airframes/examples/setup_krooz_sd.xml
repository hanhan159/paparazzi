<!-- this is a quadrotor frame equiped with Krooz v1.0 and MKK motor controllers -->

<airframe name="setup_krooz1">

  <firmware name="setup">
    <target name="tunnel"           board="krooz_1.0"/>
    <target name="setup_actuators"  board="krooz_1.0"/>
  </firmware>

  <firmware name="krooz_test_progs">
    <target name="test_led"	                board="krooz_1.0"/>
    <target name="test_sys_time"            board="krooz_1.0"/>
    <target name="test_uart"                board="krooz_1.0"/>
    <target name="test_servos"              board="krooz_1.0"/>
    <target name="test_telemetry"           board="krooz_1.0"/>
    <target name="test_baro"                board="krooz_1.0"/>
    <target name="test_rc_spektrum"         board="krooz_1.0"/>
    <target name="test_rc_ppm"              board="krooz_1.0"/>
    <target name="test_adc"                 board="krooz_1.0"/>
    <target name="test_hmc5843"	            board="krooz_1.0"/>
<!--<target name="test_itg3200"             board="krooz_1.0"/> -->
<!--<target name="test_adxl345"	            board="krooz_1.0"/> -->
    <target name="test_esc_mkk_simple"      board="krooz_1.0"/>
    <target name="test_esc_asctecv1_simple" board="krooz_1.0"/>
<!--		<configure name="FLASH_MODE" value="SERIAL"/> -->
  </firmware>

  <servos>
    <servo name="1"   no="0" min="1000" neutral="1000" max="2000"/>
    <servo name="2"   no="1" min="1000" neutral="1000" max="2000"/>
    <servo name="3"   no="2" min="1000" neutral="1000" max="2000"/>
    <servo name="4"   no="3" min="1000" neutral="1000" max="2000"/>
    <servo name="5"   no="4" min="1000" neutral="1000" max="2000"/>
    <servo name="6"   no="5" min="1000" neutral="1000" max="2000"/>
    <servo name="7"   no="6" min="1000" neutral="1000" max="2000"/>
    <servo name="8"   no="7" min="1000" neutral="1000" max="2000"/>
  </servos>

</airframe>
